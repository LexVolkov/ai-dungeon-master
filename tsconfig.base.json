{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "lib": [
            "es2021"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "shared/src/*"
            ],
            "@shared/module": [
                "shared/src/index.ts"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}